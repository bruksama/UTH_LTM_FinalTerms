<UserControl x:Class="P2PFileSharing.Client.GUI.Views.PeerItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:P2PFileSharing.Client.GUI.Views"
             mc:Ignorable="d"
             AllowDrop="True"
             d:DesignHeight="200" d:DesignWidth="400">
    <Border BorderBrush="Gray" 
            BorderThickness="1" 
            Margin="5" 
            Padding="10"
            Background="White"
            CornerRadius="5">
        <StackPanel>
            <!-- TODO: Bind to PeerViewModel properties -->
            <!-- Peer Header -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ‘¤" FontSize="20" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Username}" 
                          FontWeight="Bold" 
                          FontSize="14"/>
                <TextBlock Text="{Binding Status}" 
                          Margin="10,0,0,0"
                          Foreground="Gray"
                          FontSize="12"/>
            </StackPanel>

            <!-- Peer Address -->
            <TextBlock Text="{Binding Address}" 
                      Foreground="DarkGray" 
                      FontSize="11"
                      Margin="0,5,0,10"/>

            <!-- Shared Files List -->
            <!-- TODO: Bind to SharedFiles collection -->
            <TextBlock Text="Shared Files:" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <ItemsControl ItemsSource="{Binding SharedFiles}" Margin="20,0,0,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="ðŸ“" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding FileName}"/>
                            <TextBlock Text=" (" Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding FileSize}"/>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Drop Zone -->
            <!-- TODO: Implement drag & drop handlers -->
            <Border Background="LightBlue" 
                    BorderBrush="Blue" 
                    BorderThickness="2"
                    CornerRadius="3"
                    MinHeight="80"
                    Margin="0,10,0,0"
                    AllowDrop="True"
                    Padding="10">
                <TextBlock Text="Drop files here to send" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Foreground="DarkBlue"
                          FontStyle="Italic"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>

