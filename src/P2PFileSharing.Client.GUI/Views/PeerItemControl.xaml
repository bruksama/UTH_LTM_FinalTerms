<UserControl x:Class="P2PFileSharing.Client.GUI.Views.PeerItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="125"
             d:DesignWidth="400">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PeerCardBackgroundBrush" Color="#FAFBFF"/>
        <SolidColorBrush x:Key="PeerBorderBrush" Color="#E0E6F0"/>
        <SolidColorBrush x:Key="PeerHeaderTextBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="PeerSubtleTextBrush" Color="#6B7280"/>

        <!-- Drop zone -->
        <SolidColorBrush x:Key="DropZoneBackgroundBrush" Color="#EFF6FF"/>
        <SolidColorBrush x:Key="DropZoneBorderBrush" Color="#BFDBFE"/>
        <SolidColorBrush x:Key="DropZoneTextBrush" Color="#1D4ED8"/>

        <Style x:Key="DropZoneStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DropZoneBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DropZoneBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#93C5FD"
                                      BlurRadius="6"
                                      ShadowDepth="0"
                                      Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DBEAFE"/>
                    <Setter Property="BorderBrush" Value="#60A5FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Card peer -->
    <Border x:Name="DropZoneBorder"
            Style="{StaticResource DropZoneStyle}"
            Margin="6,4"
            Padding="12"
            CornerRadius="14"
            BorderThickness="1"
            AllowDrop="True"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect Color="#90A4AE"
                              BlurRadius="12"
                              ShadowDepth="1"
                              Opacity="0.25"/>
        </Border.Effect>

        <StackPanel>

            <!-- Header: Avatar + Username + Status -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <!-- Avatar -->
                <Border Width="32" Height="32"
                        CornerRadius="16"
                        Margin="0,0,8,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4A90E2" Offset="0"/>
                            <GradientStop Color="#7C4DFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="ðŸ‘¤"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Username}"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="{StaticResource PeerHeaderTextBrush}"/>
                        <TextBlock Text="{Binding Status}"
                                   Margin="10,0,0,0"
                                   FontSize="12"
                                   Foreground="{StaticResource PeerSubtleTextBrush}"/>
                    </StackPanel>

                    <!-- Address (IP:Port) -->
                    <TextBlock Text="{Binding Address}"
                               Foreground="{StaticResource PeerSubtleTextBrush}"
                               FontSize="11"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
