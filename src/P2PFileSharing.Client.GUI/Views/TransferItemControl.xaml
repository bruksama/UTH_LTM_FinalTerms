<UserControl x:Class="P2PFileSharing.Client.GUI.Views.TransferItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="80"
             d:DesignWidth="600">

    <UserControl.Resources>
        <!-- Màu đồng bộ với main -->
        <SolidColorBrush x:Key="TransferNormalBrush" Color="#4A90E2"/>
        <SolidColorBrush x:Key="TransferCompletedBrush" Color="#22C55E"/>
        <SolidColorBrush x:Key="TransferFailedBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="TransferSubtleTextBrush" Color="#6B7280"/>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TransferSubtleTextBrush}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TransferCompletedBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFailed}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TransferFailedBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Foreground" Value="{StaticResource TransferNormalBrush}"/>
            <Setter Property="Background" Value="#E5EDF9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TransferCompletedBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFailed}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TransferFailedBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Margin="4"
            Padding="10"
            CornerRadius="12"
            Background="#FAFBFF"
            BorderBrush="#E0E6F0"
            BorderThickness="1"
            SnapsToDevicePixels="True">

        <Border.Effect>
            <DropShadowEffect Color="#90A4AE"
                              BlurRadius="10"
                              ShadowDepth="1"
                              Opacity="0.22"/>
        </Border.Effect>

        <Border.InputBindings>
            <MouseBinding MouseAction="LeftDoubleClick"
                          Command="{Binding OpenFileCommand}" />
        </Border.InputBindings>

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Cursor" Value="Arrow" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="ToolTip" Value="{Binding FullFilePath}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: tên file + peer -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <!-- Direction icon (⬆ / ⬇…) -->
                <TextBlock Text="{Binding DirectionIcon}"
                           FontSize="18"
                           Margin="0,0,6,0"
                           Foreground="{StaticResource TransferNormalBrush}"/>

                <TextBlock Text="{Binding FileName}"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="#1E293B"/>

                <TextBlock Text="{Binding DirectionText}"
                           Margin="6,0,0,0"
                           Foreground="{StaticResource TransferSubtleTextBrush}"
                           FontSize="12"/>

                <TextBlock Text="{Binding PeerName}"
                           FontSize="12"
                           Margin="6,0,0,0"
                           Foreground="{StaticResource TransferNormalBrush}"/>
            </StackPanel>

            <!-- Row 1: progress bar + % -->
            <Grid Grid.Row="1" Margin="0,6,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0"
                             Style="{StaticResource ProgressBarStyle}"
                             Minimum="0"
                             Maximum="100"
                             Value="{Binding Progress}"/>

                <TextBlock Grid.Column="1"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="{StaticResource TransferSubtleTextBrush}"
                           Text="{Binding Progress, StringFormat={}{0:F0}%}"/>
            </Grid>

            <!-- Row 2: status + speed -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="0,2,0,0">
                <TextBlock Text="{Binding Status}"
                           Style="{StaticResource StatusTextStyle}"
                           FontSize="11"/>

                <TextBlock Text=" • "
                           Margin="4,0"
                           FontSize="11"
                           Foreground="{StaticResource TransferSubtleTextBrush}"/>

                <TextBlock Text="{Binding Speed}"
                           FontSize="11"
                           Foreground="#15803D"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
