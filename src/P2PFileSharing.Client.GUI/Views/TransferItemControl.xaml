<UserControl x:Class="P2PFileSharing.Client.GUI.Views.TransferItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="80"
             d:DesignWidth="600">
    <UserControl.Resources>
        <SolidColorBrush x:Key="TransferNormalBrush" Color="#FF2196F3"/>
        <SolidColorBrush x:Key="TransferCompletedBrush" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="TransferFailedBrush" Color="#FFF44336"/>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Foreground" Value="#FF4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFailed}" Value="True">
                    <Setter Property="Foreground" Value="#FFF44336"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource TransferNormalBrush}"/>
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TransferCompletedBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFailed}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TransferFailedBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Margin="4"
            Padding="10"
            CornerRadius="8"
            Background="White"
            BorderBrush="#22000000"
            BorderThickness="1"
            SnapsToDevicePixels="True">
        
        <Border.InputBindings>
            <MouseBinding MouseAction="LeftDoubleClick"
                          Command="{Binding OpenFileCommand}" />
        </Border.InputBindings>
        
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Cursor" Value="Arrow" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="ToolTip" Value="{Binding FullFilePath}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                
                <TextBlock Text="{Binding DirectionIcon}"
                           FontSize="18"
                           Margin="0,0,6,0"/>
                
                <TextBlock Text="{Binding FileName}"
                           FontWeight="SemiBold"
                           FontSize="13"/>
                
                <TextBlock Text="{Binding DirectionText}"
                           Margin="6,0,0,0"
                           Foreground="Gray"/>
                
                <TextBlock Text="{Binding PeerName}"
                           FontSize="13"
                           Margin="6,0,0,0"
                           Foreground="#FF2196F3"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,6,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0"
                             Style="{StaticResource ProgressBarStyle}"
                             Minimum="0"
                             Maximum="100"
                             Value="{Binding Progress}"/>

                <TextBlock Grid.Column="1"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="Gray"
                           Text="{Binding Progress, StringFormat={}{0:F0}%}"/>
            </Grid>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="0,2,0,0">
                <TextBlock Text="{Binding Status}"
                           Style="{StaticResource StatusTextStyle}"
                           FontSize="11"/>

                <TextBlock Text=" â€¢ "
                           Margin="4,0"
                           FontSize="11"
                           Foreground="Gray"/>

                <TextBlock Text="{Binding Speed}"
                           FontSize="11"
                           Foreground="DarkGreen"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>