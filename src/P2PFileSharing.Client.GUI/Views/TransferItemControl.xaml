<UserControl x:Class="P2PFileSharing.Client.GUI.Views.TransferItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="600">
    <Border BorderBrush="LightGray" 
            BorderThickness="1" 
            Margin="2" 
            Padding="10"
            Background="White">
        <StackPanel>
            <!-- TODO: Bind to TransferViewModel properties -->
            <!-- File Name and Peer -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="→" FontSize="16" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding FileName}" FontWeight="SemiBold"/>
                <TextBlock Text=" → " Margin="5,0"/>
                <TextBlock Text="{Binding PeerName}" Foreground="Blue"/>
            </StackPanel>

            <!-- Progress Bar -->
            <ProgressBar Value="{Binding Progress}" 
                        Height="20" 
                        Margin="0,5,0,5"
                        Minimum="0"
                        Maximum="100"/>

            <!-- Status and Speed -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Status}" FontSize="11" Foreground="Gray"/>
                <TextBlock Text=" - " Margin="5,0"/>
                <TextBlock Text="{Binding Speed}" FontSize="11" Foreground="DarkGreen"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

